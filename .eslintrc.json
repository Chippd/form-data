{
  "root": true,
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "plugins": [
    "ava"
  ],
  "extends": [
    "plugin:ava/recommended",
    "@octetstream/eslint-config/esm/typescript"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "rules": {
    // These three rules are false-positive and have no solution for TS
    "no-redeclare": 0,
    "no-dupe-class-members": 0,
    "lines-between-class-members": 0
  }
}
