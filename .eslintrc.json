{
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".mjs", ".js"]
      }
    }
  },
  "plugins": [
    "ava"
  ],
  "extends": [
    "@octetstream",
    "plugin:ava/recommended"
  ],
  "rules": {
    "max-classes-per-file": 0,
    "operator-linebreak": ["error", "before", {
      "overrides": {
        "+": "ignore"
      }
    }],

    "import/no-unresolved": "error",

    "ava/no-ignored-test-files": 0
  }
}
