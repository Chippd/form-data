{
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".mjs"]
      }
    }
  },
  "plugins": [
    "ava"
  ],
  "extends": [
    "@octetstream",
    "plugin:ava/recommended"
  ],
  "rules": {
    "operator-linebreak": ["error", "before", {
      "overrides": {
        "+": "ignore"
      }
    }],

    "import/no-unresolved": "error",

    "ava/no-ignored-test-files": ["error", {
      "files": [
        "src/test/**/*.{js,mjs}"
      ]
    }]
  }
}
