{
  "env": {
    "browser": true
  },
  "plugins": ["ava"],
  "extends": [
    "@octetstream",
    "plugin:ava/recommended"
  ],
  "rules": {
    "max-len": ["error", {
      "ignoreComments": true,
      "code": 80
    }],
    "max-classes-per-file": 0,
    "operator-linebreak": ["error", "before", {
      "overrides": {
        "+": "ignore"
      }
    }],

    "import/no-unresolved": "error",

    "ava/no-ignored-test-files": 0
  }
}
